{
  "name": "@kalisio/meta-ekosystem",
  "version": "0.2.1",
  "description": "Kalisio's meta-repo for sharing tools, configurations, and conventions",
  "packageManager": "pnpm@10.28.0",
  "type": "module",
  "bin": {
    "k-sync-catalog": "./bin/k-sync-catalog.js",
    "k-init-monorepo": "./bin/k-init-monorepo.js",
    "k-init-package": "./bin/k-init-package.js",
    "k-init-docs": "./bin/k-init-docs.js",
    "k-gen-docs": "./bin/k-gen-docs.js"
  },
  "files": [
    "catalog.json",
    "plopfile.js",
    "templates/",
    "scripts/"
  ],
  "exports": {
    "./catalog.json": "./catalog.json",
    "./templates/jsdoc2md/jsdoc2md.hbs": "./templates/jsdoc2md/jsdoc2md.hbs"
  },
  "lint-staged": {
    "*.{js,cjs,mjs}": [
      "pnpm lint"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "lint": "standard '**/*.js' --fix",
    "changeset": "changeset",
    "changeset:status": "changeset status",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "keywords": [
    "kalisio",
    "metarepo",
    "ekosystem"
  ],
  "author": {
    "name": "KALISIO <contact@kalisio.com>",
    "url": "https://github.com/kalisio"
  },
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/kalisio/meta-ekosystem.git"
  },
  "bugs": {
    "url": "https://github.com/kalisio/meta-ekosystem/issues"
  },
  "homepage": "git://github.com/kalisio/meta-ekosystem#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "glob": "^13.0.1",
    "husky": "^9.1.7",
    "jsdoc-to-markdown": "^9.1.3",
    "lint-staged": "^16.2.7",
    "standard": "^17.1.2",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "node-plop": "^0.32.3"
  },
  "engines": {
    "node": ">=20"
  }
}
